{% extends '@KontrolgruppenCore/main/index.html.twig' %}

{% block title %}{{ 'reason.index.title'|trans }}{% endblock %}

{% block content %}
    <h1 class="float-left">{{ 'reason.index.title'|trans }}</h1>
    <a href="{{ path('reason_new') }}" class="btn btn-success float-right btn-lg">{{ 'reason.btns.create_new'|trans }}</a>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <thead>
                <tr>
                    <th>{{ 'reason.table.client_types'|trans }}</th>
                    <th>{{ 'reason.table.name'|trans }}</th>
                    <th class="float-right">{{ 'common.table.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for reason in reasons %}
                <tr>
                    <td>{{ reason.clientTypes|process_client_types }}</td>
                    <td>{{ reason.name }}</td>
                    <td class="text-right">
                        <a href="{{ path('reason_show', {'id': reason.id}) }}" class="btn btn-sm btn-dark" data-toggle="tooltip" data-placement="top"
                           title="{{ 'common.actions.show'|trans }}">
                            <i class="fas {{ iconClass('show') }} fa-inverse"></i>
                        </a>
                        <a href="{{ path('reason_edit', {'id': reason.id}) }}" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top"
                           title="{{ 'common.actions.edit'|trans }}">
                            <i class="fas {{ iconClass('edit') }} fa-inverse"></i></a>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'common.no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
